{
  "compilerOptions": {
    "outDir": "./dist",
    "experimentalDecorators": true,
    "target": "ESNext",
    "module": "CommonJS",
    "strict": false,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "lib": [
      "ES2018"
    ],
    "resolveJsonModule": true,
  },
  "exclude": [
    "node_modules",
    "repo"
  ],
}