{
  "compilerOptions": {
    "outDir": "./dist",
    "experimentalDecorators": true,
    "module": "ESNext",
    "target": "ES2021",
    "strict": false,
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "resolveJsonModule": true,
  },
  "exclude": [
    "node_modules", "repo"
  ],
}